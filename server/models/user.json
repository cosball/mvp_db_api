{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "allowEternalTokens": true
  },
  "properties": {
    "firstname": {
      "type": "string",
      "required": true
    },
    "lastname": {
      "type": "string",
      "required": true
    },
    "institutionShortName": {
      "type": "string",
      "required": true
    },
    "roleType": {
      "type": "string",
      "required": true
    },
    "posTitle": {
      "type": "string",
      "required": false
    },
    "contactNo": {
      "type": "string",
      "required": false
    },
    "addBlackListCount": {
      "type": "number",
      "default": 0
    },
    "upBlackListCount": {
      "type": "number",
      "default": 0
    },
    "createdAt": {
      "type": "date",
      "required": true
    },
    "updatedAt": {
      "type": "date"
    },
    "creator": {
      "type": "string",
      "required": true
    },
    "updatedBy": {
      "type": "string"
    },
    "lastSignIn": {
      "type": "date",
      "default": null
    },
    "currentSignIn": {
      "type": "date",
      "default": null
    },
    "firstSignIn": {
      "type": "boolean",
      "default": true 
    },
    "emailVerified": {
      "type": "boolean",
      "default": true
    },
    "institutionId": {
      "type": "string",
      "required": true
    }
  },
  "scope": {
    "order": "firstname ASC",
    "include":     
        {"relation": "institution",
         "scope":
            {"fields": ["institutionName"]}
        } 
  },  
  "validations": [],
  "relations": {
   "institution": {
      "type": "belongsTo",
      "model": "institution",
      "foreignKey": "institutionId"
    },    
    "blacklists": {
      "type": "hasMany",
      "model": "blacklist",
      "foreignKey": ""
    },
    "transLogs": {
      "type": "hasMany",
      "model": "transLog",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "api",
      "permission": "ALLOW",
      "property": "__get__accessTokens"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "api",
      "permission": "ALLOW",
      "property": "findOne"
    }    
  ],
  "methods": {}
}
